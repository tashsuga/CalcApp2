<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="67dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/TextInputLayout1" android:orientation="vertical"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp" >
            <!--app:layout_constraintTop_toTopOf="parent"> -->

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="１つ目の数字を入力：" android:inputType="numberDecimal"/>


    </android.support.design.widget.TextInputLayout>




    <Button
            android:text="足し算"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="116dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>


</android.support.constraint.ConstraintLayout>